<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="10dp"
    >
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ImageCompareActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_title_captured"
            android:text="@string/dummy_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/img_captured"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_imgview"
            android:id="@+id/img_captured"
            android:src="@android:drawable/ic_menu_help"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/text_title_captured"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_title_reference"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_title_reference"
            android:text="@string/dummy_text"
            app:layout_constraintTop_toBottomOf="@id/img_captured"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/img_reference"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_imgview"
            android:id="@+id/img_reference"
            android:src="@android:drawable/ic_menu_help"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/text_title_reference"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/text_title_result"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_title_result"
            android:text="@string/dummy_text"
            app:layout_constraintTop_toBottomOf="@id/img_reference"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/img_result"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_imgview"
            android:id="@+id/img_result"
            android:src="@android:drawable/ic_menu_help"
            android:scaleType="fitXY"
            app:layout_constraintTop_toBottomOf="@id/text_title_result"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </android.support.constraint.ConstraintLayout>
</ScrollView>