<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/min_padding"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_first"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/min_padding"
            android:layout_height="wrap_content"
            android:text="Enter text" />

        <EditText
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginTop="@dimen/min_padding"
            android:hint="Text Input to send to another activity"
            android:focusable="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_padding"
            android:gravity="center"
            android:id="@+id/button_first"
            android:text="Launch Second Activity"/>

        <Button
            android:id="@+id/bundle_data_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_padding"
            android:gravity="center"
            android:text="Pass data as bundle" />

        <Button
            android:id="@+id/parcel_data_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_padding"
            android:gravity="center"
            android:text="Pass data as parcel" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_padding"
            android:gravity="center"
            android:id="@+id/button_quit"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/textView_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/min_padding" />

    </LinearLayout>

</ScrollView>
